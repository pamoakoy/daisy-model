OLDCROPS = beet-old.dai grass-old.dai pea-old.dai potato-old.dai \
	sbarley-old.dai srape-old.dai wbarley-old.dai wrape-old.dai \
	wwheat-old.dai 
NEWCROPS = maize.dai pea.dai rye.dai sbarley.dai sugarbeet.dai srape.dai \
	swheat.dai wbarley.dai wrape.dai wwheat.dai grass.dai fodderbeet.dai

DAISY 	= crop.dai fertilizer.dai tillage.dai log.dai mini.dai chemistry.dai \
	$(OLDCROPS) $(NEWCROPS)
MSHE	= mshe.dai mshe-standalone.dai
TEXT	= Makefile test.dai
CLIMATE = weather.dwf
REMOVE 	=  cutgrass.dai 

all:
	echo Nothing to do here.

stdref.dai:	mini.dai $(NEWCROPS) log.dai 
	rm -f stdref.dai
	echo ";;; stdref.dai --- MiniDaisy standard reference library" \
		> stdref.dai
	echo ";;" >> stdref.dai
	echo ";; This file is automatically generated. DO NOT EDIT!" \
		>> stdref.dai
	echo >> stdref.dai
	cat mini.dai $(NEWCROPS) log.dai >> stdref.dai

# Create a ZIP file with all the sources.
#
daisy-lib.zip:	$(DAISY) $(CLIMATE) $(TEXT) $(MSHE)
	rm -f daisy-lib.zip
	zip daisy-lib.zip $(DAISY) $(CLIMATE) $(TEXT) $(MSHE)

# Move it to ftp.
#
dist:
	$(MAKE) daisy-lib.zip
	mv -f daisy-lib.zip $(HOME)/.public_ftp/daisy

# Update the CVS repository.
#
cvs: $(DAISY) $(TEXT) $(MSHE) $(CLIMATE)
	@if [ "X$(TAG)" = "X" ]; then echo "*** No tag ***"; exit 1; fi
	-cvs add $(DAISY) $(TEXT) $(MSHE)
	rm -f $(REMOVE) 
	-cvs remove $(REMOVE) 
	cvs commit -m "$(TAG)" # "Version $(TAG)"

